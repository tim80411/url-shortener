<div class="container text-center">
  <h1 class="mt-5">URL Shortener</h1>
  <div class="row justify-content-center mt-5">
    <i class="fas fa-link fa-10x " style="color: Dodgerblue;"></i>
  </div>

  <form class="row justify-content-center mt-5" action="/" method="POST">
    <input class="col-8 form-control" type="url" name="url" id="url" placeholder="input URL here">
    <button class="col-5 btn btn-outline-primary mt-3" type="submit">Shorten</button>
  </form>


</div>